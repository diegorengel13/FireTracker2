
@{
    Layout = "~/Views/Shared/_NavShare.cshtml";

}

@{
    ViewBag.Title = "ManageRoles";
}


@using (Html.BeginForm())
{


    @Html.AntiForgeryToken()
    @Html.Hidden("UserId", (string)ViewBag.UserId)
    <div class="form-group">
        @Html.Label("Assign Role", null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Roles", null, "---Select Role---", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Assign" class="btn btn-bitbucket" />
        </div>

    </div>
}